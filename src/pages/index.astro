---
import Layout from "../layouts/Layout.astro";
const currentYear = new Date().getFullYear();
---

<Layout>
  <main
    class="min-h-screen bg-gradient-to-br from-gray-900 via-blue-900 to-indigo-900"
  >
    <!-- Navigation -->
    <nav
      class="bg-gray-900/95 backdrop-blur-md sticky top-0 z-50 border-b border-gray-700"
    >
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a
            href="/"
            class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent"
          >
            Cristian Carrizo
          </a>

          <!-- Desktop Menu -->
          <div class="hidden md:flex space-x-8">
            <a
              href="/"
              class="text-blue-400 font-medium hover:text-blue-300 transition-colors"
              >Inicio</a
            >
            <a
              href="/about"
              class="text-gray-300 hover:text-white transition-colors"
              >Sobre Mí</a
            >
            <a
              href="/projects"
              class="text-gray-300 hover:text-white transition-colors"
              >Proyectos</a
            >
            <a
              href="/contact"
              class="text-gray-300 hover:text-white transition-colors"
              >Contacto</a
            >
          </div>

          <!-- Mobile menu button con transiciones -->
          <div class="md:hidden">
            <button
              id="mobile-menu-button"
              class="text-gray-300 hover:text-white focus:outline-none focus:text-white transition-colors duration-300"
            >
              <svg
                class="h-6 w-6 transition-transform duration-300 ease-in-out"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  class="transition-all duration-300 ease-in-out"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile menu con transición suave -->
        <div
          id="mobile-menu"
          class="md:hidden overflow-hidden transition-all duration-300 ease-in-out max-h-0 opacity-0"
        >
          <div
            class="px-2 pt-2 pb-3 space-y-1 bg-gray-800/95 backdrop-blur-md rounded-lg mt-2 transform transition-transform duration-300 ease-in-out"
          >
            <a
              href="/"
              class="block px-3 py-2 text-blue-400 font-medium hover:text-blue-300 transition-colors duration-200 hover:bg-gray-700/50 rounded-md"
              >Inicio</a
            >
            <a
              href="/about"
              class="block px-3 py-2 text-gray-300 hover:text-white transition-colors duration-200 hover:bg-gray-700/50 rounded-md"
              >Sobre Mí</a
            >
            <a
              href="/projects"
              class="block px-3 py-2 text-gray-300 hover:text-white transition-colors duration-200 hover:bg-gray-700/50 rounded-md"
              >Proyectos</a
            >
            <a
              href="/contact"
              class="block px-3 py-2 text-gray-300 hover:text-white transition-colors duration-200 hover:bg-gray-700/50 rounded-md"
              >Contacto</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section con animación -->
    <section class="relative overflow-hidden bg-gray-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="animate-fade-in-up">
            <h1
              class="text-4xl md:text-6xl font-bold text-white mb-6 animate-pulse"
            >
              Hola, soy <span
                class="text-blue-400 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent"
                >Cristian Carrizo</span
              >
            </h1>
            <p class="text-xl text-gray-300 mb-8 leading-relaxed">
              Desarrollador web apasionado por crear experiencias digitales
              excepcionales. Especializado en desarrollo frontend y backend con
              tecnologías modernas.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/projects"
                class="bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3 px-8 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl text-center"
              >
                Ver Proyectos
              </a>
              <a
                href="/contact"
                class="bg-gradient-to-r from-green-600 to-teal-600 text-white font-semibold py-3 px-8 rounded-lg hover:from-green-700 hover:to-teal-700 transition-all duration-300 shadow-lg hover:shadow-xl text-center"
              >
                Contactar
              </a>
            </div>
          </div>
          <div class="flex justify-center lg:justify-end">
            <div
              class="w-80 h-80 rounded-full overflow-hidden shadow-2xl border-4 border-gray-700"
            >
              <img
                src="/profile.jpeg"
                alt="Cristian Carrizo"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-black-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            ¿Qué puedo hacer por ti?
          </h2>
          <p class="text-xl text-white max-w-2xl mx-auto">
            Ofrezco servicios completos de desarrollo web para hacer realidad
            tus ideas
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Service 1 -->
          <div
            class="text-center p-8 rounded-xl bg-gray-800/50 backdrop-blur-sm border border-gray-700 hover:border-blue-500 hover:shadow-2xl hover:shadow-blue-500/20 transition-all duration-300 transform hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg"
            >
              <span class="text-2xl">💻</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Sitios Web</h3>
            <p class="text-white">
              Sitios web modernos y responsivos con WordPress, landing pages,
              blogs y portafolios optimizados para SEO y rendimiento.
            </p>
          </div>

          <!-- Service 2 -->
          <div
            class="text-center p-8 rounded-xl bg-gray-800/50 backdrop-blur-sm border border-gray-700 hover:border-green-500 hover:shadow-2xl hover:shadow-green-500/20 transition-all duration-300 transform hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg"
            >
              <span class="text-2xl">📱</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Aplicaciones Web</h3>
            <p class="text-white">
              Sistemas web dinámicos con PHP y SQL, funcionalidades
              personalizadas, gestión de datos y procesos de negocio
              automatizados.
            </p>
          </div>

          <!-- Service 3 -->
          <div
            class="text-center p-8 rounded-xl bg-gray-800/50 backdrop-blur-sm border border-gray-700 hover:border-purple-500 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 transform hover:-translate-y-2"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg"
            >
              <span class="text-2xl">🔧</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Consultoría</h3>
            <p class="text-white">
              Asesoramiento técnico para optimizar tus proyectos y mejorar la
              experiencia de usuario.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="py-20 bg-black-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white/80 mb-4">
            Proyectos Destacados
          </h2>
          <p class="text-xl text-white/80 max-w-2xl mx-auto">
            Una muestra de mis trabajos más recientes y exitosos
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- ... proyectos (igual que antes) ... -->
        </div>
        <div class="text-center mt-12">
          <a
            href="/projects"
            class="bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3 px-8 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Ver Todos los Proyectos
          </a>
        </div>
      </div>
    </section>

    <!-- Tecnologías que domino -->
    <section class="py-20 bg-black-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Tecnologías que domino
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Herramientas y lenguajes con los que trabajo día a día
          </p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
          <!-- Tech badges -->
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">⚛️</div>
            <span class="text-white text-sm font-medium">React</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">🚀</div>
            <span class="text-white text-sm font-medium">Astro</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">🎨</div>
            <span class="text-white text-sm font-medium">Sass</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">📝</div>
            <span class="text-white text-sm font-medium">Git</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">📰</div>
            <span class="text-white text-sm font-medium">WordPress</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">💚</div>
            <span class="text-white text-sm font-medium">Node.js</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">🐘</div>
            <span class="text-white text-sm font-medium">PHP</span>
          </div>
          <div
            class="bg-gray-800 border border-gray-600 p-4 rounded-lg text-center hover:bg-gray-700 hover:border-gray-500 transition-all duration-300 shadow-lg"
          >
            <div class="text-3xl mb-2">🐍</div>
            <span class="text-white text-sm font-medium">Python</span>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-blue-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          ¿Listo para trabajar juntos?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Tengo experiencia en proyectos de todos los tamaños. ¡Hablemos sobre
          tu próximo proyecto!
        </p>
        <a
          href="/contact"
          class="bg-white text-blue-600 font-semibold py-3 px-8 rounded-lg hover:bg-gray-100 transition-colors"
        >
          Empezar Conversación
        </a>
      </div>
    </section>
  </main></Layout
>

<script>
  // Mobile menu toggle con transiciones suaves
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const svg = mobileMenuButton?.querySelector("svg");
    const path = svg?.querySelector("path");

    if (mobileMenuButton && mobileMenu && svg && path) {
      let isOpen = false;

      mobileMenuButton.addEventListener("click", function () {
        isOpen = !isOpen;

        if (isOpen) {
          // Abrir menú
          mobileMenu.classList.remove("max-h-0", "opacity-0");
          mobileMenu.classList.add("max-h-96", "opacity-100");

          // Rotar ícono y cambiar a X
          svg.style.transform = "rotate(90deg)";
          setTimeout(() => {
            path.setAttribute("d", "M6 18L18 6M6 6l12 12");
            svg.style.transform = "rotate(0deg)";
          }, 150);
        } else {
          // Cerrar menú
          mobileMenu.classList.remove("max-h-96", "opacity-100");
          mobileMenu.classList.add("max-h-0", "opacity-0");

          // Rotar ícono y cambiar a hamburguesa
          svg.style.transform = "rotate(-90deg)";
          setTimeout(() => {
            path.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
            svg.style.transform = "rotate(0deg)";
          }, 150);
        }
      });

      // Cerrar menú al hacer clic en un enlace
      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach((link) => {
        link.addEventListener("click", function () {
          isOpen = false;
          mobileMenu.classList.remove("max-h-96", "opacity-100");
          mobileMenu.classList.add("max-h-0", "opacity-0");

          svg.style.transform = "rotate(-90deg)";
          setTimeout(() => {
            path.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
            svg.style.transform = "rotate(0deg)";
          }, 150);
        });
      });

      // Cerrar menú al hacer clic fuera
      document.addEventListener("click", function (event) {
        if (
          !mobileMenuButton.contains(event.target) &&
          !mobileMenu.contains(event.target) &&
          isOpen
        ) {
          isOpen = false;
          mobileMenu.classList.remove("max-h-96", "opacity-100");
          mobileMenu.classList.add("max-h-0", "opacity-0");

          svg.style.transform = "rotate(-90deg)";
          setTimeout(() => {
            path.setAttribute("d", "M4 6h16M4 12h16M4 18h16");
            svg.style.transform = "rotate(0deg)";
          }, 150);
        }
      });
    }
  });
</script>
